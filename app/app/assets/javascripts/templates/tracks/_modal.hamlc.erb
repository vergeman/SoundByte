#BookmarkletModal.reveal-modal{:'data-reveal' =>''}
  %h2
    Add The Bookmarklet
  %hr
    
  #markletdrag
    %h3{:style=>"text-align:center;"}
      Save the best of the mix.
    %p.marklet
      %a{:onclick => 'return false;', :href => 'javascript:(function(){document.getElementById("sb-app") || document.getElementById("sb-script") ? false : (function() {var e = document.createElement("script");e.setAttribute("id", "sb-script");e.setAttribute("src","//<%= ENV['markletURL'] %>/stereopaw-min.js?r="+Math.random()*99999999);document.body.appendChild(e)})() }())'}        
        %button
          stereo paw
      .caption
        Drag this button to your bookmark bar
  #markletcode
    %h6
      If your device can't drag and drop, just paste the code below in the
      %strong url
      or
      %strong location
      field of a new bookmark.

    #code
      %textarea{:readonly => ''}
        javascript:(function(){document.getElementById("sb-app") || document.getElementById("sb-script") ? false : (function() {var e = document.createElement("script");e.setAttribute("id", "sb-script");e.setAttribute("src","//<%= ENV['markletURL'] %>/stereopaw-min.js?r="+Math.random()*99999999);document.body.appendChild(e)})() }())
        
  %a.close-reveal-modal
    &#215;
