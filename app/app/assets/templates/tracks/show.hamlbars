.track-meta
  
  .track-artwork-wrap

    .track-artwork-mask
      %i.fi-play-circle
        
    .track-artwork-url{:style => "background-image:url(\"{{track.artwork_url}}\")"}


  .track-info-wrap

    .track-title
      %h4.text
        %a{:href => "{{track.page_url}}",
           :target => "_blank"}          
          {{track.title}}

    .track-artist
      %h6.subheader.text
        %a{:href => "{{track.profile_url}}",
           :target => "_blank"}
          {{track.artist}}

    = hb 'if track.comment' do
      .track-notes
        %i.fi-quote
        %p
          {{track.comment}}

          
  .track-controls-wrap
    
    %ul.track-controls
      
      %li.play{:track_id => "{{track.track_id}}", :timestamp => "{{track.timestamp}}", :service => "{{track.service}}", :artist => "{{track.artist}}", :title => "{{track.title}}", :duration => "{{track.duration}}" }
        %i.fi-play-circle
        %span
          {{track.timeformat}}
          
      %li.play{:track_id => "{{track.track_id}}", :timestamp => 0, :service => "{{track.service}}", :artist => "{{track.artist}}", :title => "{{track.title}}", :duration => "{{track.duration}}" }
        %i.fi-play
        %span
          Full

      %li.playlist
        %i.fi-plus
        %span
          Add

      %li.share
        %i.fi-share
        %span
          Share



-#
  .track-id {{track.track_id}}
  .track-profile-url {{track.profile_url}}
  .track-page-url {{track.page_url}}
  .track-timeformat Time: {{track.timeformat}}
  .track-shareable {{track.shareable}}
  .track-duration {{track.duration.to_s}}
  .track-timestamp {{track.timestamp.to_s}}
  .track-service {{track.service}}

-#.stop Stop
  .track-attribution
    %a{:href => "{{track.page_url}}", :target => "_blank"}
      %img{:src => "{{track.attribution_url}}", :width => "{{track.attribution_width}}",:height => "{{track.attribution_height}}" }
%hr